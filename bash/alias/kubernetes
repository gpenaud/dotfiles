alias kl='kubectl'
alias kls='kubectl --namespace kube-system'
alias lkl='kubectl --certificate-authority=/tmp/cfssl_certs/ca.pem --client-certificate=/tmp/cfssl_certs/kubernetes.pem --client-key=/tmp/cfssl_certs/kubernetes-key.pem --server=https://apiserver.k8s.lan:6443'
alias lkls='kubectl --namespace kube-system --certificate-authority=/tmp/cfssl_certs/ca.pem --client-certificate=/tmp/cfssl_certs/kubernetes.pem --client-key=/tmp/cfssl_certs/kubernetes-key.pem --server=https://apiserver.k8s.lan:6443'
